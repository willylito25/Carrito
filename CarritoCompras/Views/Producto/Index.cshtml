@{
    ViewBag.Title = "Productos";
}
@model IEnumerable<CarritoCompras.Models.Producto>
<h2>Productos</h2>
@if (Model != null)
{
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>    
                <th>Precio</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@String.Format("{0:C}",item.Precio)</td>
                    <td>@Html.ActionLink("Agregar","AgregaCarrito","Carrito",new {Id=item.Id},null )</td>
                </tr>
            }
        </tbody>
    </table>
}
